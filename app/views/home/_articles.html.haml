- articles.each do |article|
  %article
    .article_title= link_to article.title, article

    .article_synopsis
      ~ markdown article.synopsis

    .article_date
      = succeed ',' do
        = article.published_at.to_date.strftime('%b %e, %Y')

    .article_comment_count
      = link_to '0 Comments',
                article_path(article, anchor: 'disqus_thread'),
                data: { 'disqus-identifier' => article.to_param }

    - unless article.synopsis_covers_everything?
      .article_more
        = link_to "Read more", article
    .clearfix
