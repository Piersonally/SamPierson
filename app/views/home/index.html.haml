- title 'Blog'
- @heading = false

.row
  .col-sm-9
    - @index_page_data[:articles].limit(10).each do |article|
      %article
        .article_title= link_to article.title, article
        .article_date
          = article.published_at.to_date.strftime('%b %e, %Y')
        .article_synopsis
          ~ markdown article.synopsis
        - unless article.synopsis_covers_everything?
          .article_more
            = link_to "Read more", article
        .clearfix

  .col-sm-3.archive
    %h4 More Articles
    %ul
      - @index_page_data[:articles].offset(10).each do |article|
        %li= link_to article.title, article

    %h4 Tags
    %ul
      - @index_page_data[:topics].each do |topic|
        %li
          = link_to topic.name, topic
          = surround("(", ")") do
            = topic.article_count
