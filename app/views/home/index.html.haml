- title 'Blog'
- @heading = false

.row
  .col-sm-9
    = render 'articles', articles: @index_page_data[:articles].limit(10)

  .col-sm-3.archive
    %h4 More Articles
    %ul
      - @index_page_data[:articles].offset(10).each do |article|
        %li
          = link_to article.title, article_path(article, anchor: 'disqus_thread')

    %h4 Tags
    %ul
      - @index_page_data[:topics].each do |topic|
        %li
          = link_to topic.name, topic
          = surround "(", ")" do
            = topic.article_count

- unless Rails.env.test?
  - content_for :javascripts do
    :javascript
      Sam.Disqus.setupCommentCountLinks();
