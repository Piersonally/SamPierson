- title "Quotation by #{@quote.author}"

%p
  %b Author:
  = @quote.author
%p
  %b Quote:
  = @quote.quote
%p
  %b Source:
  = @quote.source
%p
  %b When:
  = @quote.when

- if user_logged_in? && current_user.is_admin?
  = link_to 'Edit', [:edit, @quote], class: 'btn btn-info'

  = link_to 'Delete', @quote, method: :delete,
                              class: 'btn btn-danger',
                              data: { confirm: 'Are you sure?' }

